{
  "author": "Peter T Bosse II <pbosse@gmail.com> (https://ptb.dev/)",
  "ava": {
    "babel": false,
    "extensions": [
      "js"
    ],
    "failFast": false,
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "esm"
    ],
    "sources": [
      "src/**/*.js"
    ],
    "verbose": true
  },
  "browser": "",
  "bugs": {
    "url": "https://github.com/ptb/style/issues"
  },
  "description": "",
  "devDependencies": {
    "@amory/eslint-config": "latest",
    "ava": "1.4.1",
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-plugin-compat": "3.1.1",
    "eslint-plugin-fp": "2.3.0",
    "eslint-plugin-graphql": "3.0.3",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-json": "1.4.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-react": "7.13.0",
    "eslint-plugin-standard": "4.0.0",
    "esm": "3.2.22",
    "graphql": "14.3.0",
    "nyc": "14.1.1",
    "prettier-eslint-cli": "4.7.1"
  },
  "eslintConfig": {
    "extends": [
      "@amory"
    ],
    "rules": {
      "func-style": [
        "warn",
        "declaration"
      ],
      "prefer-object-spread": "off"
    },
    "settings": {
      "react": {
        "version": "16.8.6"
      }
    }
  },
  "files": [],
  "homepage": "https://github.com/ptb/style#readme",
  "keywords": [],
  "license": "Apache-2.0",
  "main": "",
  "maintainers": [
    {
      "email": "pbosse@gmail.com",
      "name": "Peter T Bosse II",
      "url": "https://ptb.dev/"
    }
  ],
  "module": "",
  "name": "@amory/style",
  "nyc": {
    "all": true,
    "exclude": [
      "src/**/*.test.js"
    ],
    "extension": [
      ".js"
    ],
    "include": [
      "src/**/*.js"
    ],
    "temp-dir": "/tmp/.nyc_output"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "parser": "babel",
    "printWidth": 78,
    "proseWrap": "always",
    "requirePragma": false,
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "publishConfig": {
    "access": "public"
  },
  "readmeFilename": "readme.org",
  "renovate": {
    "automerge": true,
    "extends": [
      "config:base"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ptb/style.git"
  },
  "scripts": {
    "lint": "eslint './src/'",
    "test": "nyc ava",
    "tidy": "prettier-eslint --write \"src/**/*.js\""
  },
  "version": ""
}
